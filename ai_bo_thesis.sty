\def\frontispiece{
        \pagenumbering{roman}
        \pagestyle{empty}
        \titlep
        \newpage
        \cleardoublepage
        }

\def\dedication#1{   
        \pagestyle{plain}
        \null\vfill
        \begin{flushright}%
                \large%
                #1
        \end{flushright}
        \vfill\null\vfill\newpage
        \cleardoublepage
        }

\def\toc{
        \pagestyle{plain}
        \tableofcontents
        \newpage
        }
        
\def\figstoc{
        \pagestyle{plain}
        \listoffigures
        \newpage
        }
        
\def\tablestoc{
        \pagestyle{plain}
        \listoftables
        \newpage
        }
        

\def\begintext{
    \cleardoublepage
        \pagenumbering{arabic}
    \pagestyle{fancy}
    \renewcommand{\chaptermark}[1]{\markboth{##1}{##1}} % remember chapter title
    \renewcommand{\sectionmark}[1]{\markright{\thesection\ ##1 }}
                                                 % section number and title 
    %\lhead[\fancyplain{}{\bf\thepage}]{\fancyplain{}{\bf\miomark}}
    \lhead[\fancyplain{}{\bf\thepage}]{\fancyplain{}{\bf\mymark}}
    \rhead[\fancyplain{}{\bf\mymark}]{\fancyplain{}{\bf\thepage}}
    \def\mymark{\rightmark}
    \def\myminit{\thesection~}
    \cfoot{}
    \fancypagestyle{plain}{% 
    \fancyhead{} %get rid of the headers on plain pages 
    \renewcommand{\headrulewidth}{0pt}} % and the line  
}

